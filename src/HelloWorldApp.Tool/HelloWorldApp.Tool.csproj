<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- .NET Tool Packaging Properties -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>helloworld</ToolCommandName>
    <PackageId>HelloWorldApp.Tool</PackageId>
    <Authors>devlead</Authors>
    <Description>A .NET tool that greets the world</Description>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\HelloWorldApp.Common\HelloWorldApp.Common.csproj" />
  </ItemGroup>

</Project>
